{
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs" // to have jest.config as TS we need cjs
    }
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es2017",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": { // TODO npm package tsconfig-paths allows path mapping - not yet working after compile
      "Actions*": ["Actions*"],
      "Configs*": ["Configs*"],
      "Entities*": ["Entities*"],
      "Repositories*": ["Repositories*"],
      "Resolvers*": ["Resolvers*"],
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules", 
    "dist"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
}