{
  "name": "balanced-money-backend",
  "version": "1.0.0",
  "description": "backend of the balanced-money application",
  "main": "dist/index",
  "scripts": {
    "build": "rimraf dist && tsc",
    "node": "./dist/index.js",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "NODE_ENV=development DOTENV_CONFIG_PATH=.env.dev nodemon ts-node src/index.ts",
    "format:prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "DOTENV_CONFIG_PATH=.env.test NODE_ENV=test jest --runInBand",
    "test:coverage": "DOTENV_CONFIG_PATH=.env.test NODE_ENV=test jest --runInBand --coverage",
    "migrate:create": "ts-node ./node_modules/typeorm migration:create -n",
    "migrate:up": "ts-node ./node_modules/typeorm migration:run",
    "migrate:down": "ts-node ./node_modules/typeorm migration:revert"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:prettier && npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JRRS1982/balanced-money-backend.git"
  },
  "keywords": [
    "graphql",
    "typescript",
    "nodejs",
    "typeorm"
  ],
  "author": "JRRS1982",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JRRS1982/balanced-money-backend/issues"
  },
  "homepage": "https://github.com/JRRS1982/balanced-money-backend#readme",
  "dependencies": {
    "apollo-server": "^3.5.0",
    "dotenv": "^16.0.0",
    "graphql": "^15.8.0",
    "husky": "^7.0.4",
    "lodash": "^4.17.21",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.5",
    "@babel/plugin-proposal-decorators": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.5",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "babel-jest": "^27.4.5",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.5.0",
    "typescript": "^4.5.4"
  }
}
